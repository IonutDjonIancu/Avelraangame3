        var character = JSON.parse(localStorage.getItem("character"))
        
        if (!character) {
            return;
        }

        console.log(character);
        return character;
    }

    const getCharacter = () => {

        var characterId = localStorage.getItem("characterId");
        var sessionId = localStorage.getItem("sessionId");

        $.ajax({
            type: 'GET',
            url: '@Url.Action("GetCharacter", "Character")' +
                '?characterId=' + encodeURIComponent(characterId) +
                '&sessionId=' + encodeURIComponent(sessionId),
            dataType: 'json',
            success: function (response) {
                localStorage.setItem("character", JSON.stringify(response));
                console.log(response);
                $("#spinner").hide();
                $("#showContent").show();
            },
            error: function (xhr, status, error) {
                window.location.href = "/character/error?info=" + xhr.responseText;
            }
        });
    }

    // run logic
    getCharacter();
</script>
